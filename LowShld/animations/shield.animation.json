// Unobtrusive Offhand Shield by Munro Anderson

{
	"format_version": "1.10.0",
	"animations": {
		"animation.shield.wield_off_hand_first_person": {
			"loop": true,
			"bones": {
				"shield": {
					"position": [
						-17.0,	// L/R
						18.0,	// up/down
						"variable.is_using_bow ? -variable.off_hand_first_person_with_bow_pos_z : 2.5"	// in/out	(shield hidden when bow drawn)
					],
					"rotation": [
						-5.0,	// top/bottom inward
						185.0,	// side inward
						179.5	// CW/CCW
					]
				}
			}
		},
		"animation.shield.wield_off_hand_first_person_blocking": {
			"loop": "hold_on_last_frame",
			"bones": {
				"shield": {
				"position": {
					"0": [ -16.5, -6.0, 3.0 ],	// initial
					"0.06": [ -15.5, -5.0, 4.5 ]	// final
				},
				"rotation": [ "variable.off_hand_first_person_rot_x", "variable.off_hand_first_person_rot_y", "variable.off_hand_first_person_rot_z + 8.0" ]
				}
			}
		}
		
	}
}

